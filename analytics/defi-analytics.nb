(* Load required packages *)
Needs["Blockchain`"];

(* Connect to Ethereum for sample data *)
ethData = BlockchainGet["Ethereum", "Transactions", "BlockCount" -> 100];

(* Extract relevant fields *)
transactionAmounts = ethData[[All, "Amount"]];

(* Calculate transaction volume *)
totalVolume = Total[transactionAmounts] /. Null -> 0;

(* Visualize transaction volume *)
BarChart[
    Take[transactionAmounts, 50], (* First 50 transactions *)
    ChartLabels -> Range[1, 50],
    PlotLabel -> "Sample Ethereum Transaction Amounts",
    AxesLabel -> {"Transaction Index", "Amount (ETH)"}
]

